<Window x:Class="ResearchProjectManagement_SE193119.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE193119"
        mc:Ignorable="d"
        Title="Create | Update Project" Height="500" Width="800" FontFamily="Tahoma" FontSize="13" Background="#FFF5F5DC" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid HorizontalAlignment="Center" Width="800" Height="484" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="181*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>

        <Label Content="CREATE | UPDATE | VIEW PROJECT" HorizontalAlignment="Left" Margin="31,20,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="709" Height="62" RenderTransformOrigin="0.453,-0.125" FontWeight="Bold" FontSize="40"/>


        <Label Content="ID" Margin="32,96,292,358" FontSize="20" Foreground="black" Grid.RowSpan="2"/>
        <Label Content="Project Title" Margin="33,22,229,306" FontSize="20" Foreground="black" Grid.Row="1"/>
        <Label Content="Field" Margin="32,72,233,256" FontSize="20" Foreground="black" RenderTransformOrigin="0.501,0.775" Grid.Row="1"/>
        <Label Content="Start Date" Margin="31,119,235,210" FontSize="20" Foreground="black" Grid.Row="1"/>
        <Label Content="End Date" Margin="32,170,245,161" FontSize="20" Foreground="black" Grid.Row="1"/>

        <Label Content="Lead Researcher" Margin="33,224,173,107" FontSize="20" Foreground="black" Grid.Row="1"/>

        <Label Content="Budget" Margin="31,280,246,28" FontSize="20" Foreground="black" Grid.Row="1" />

        <TextBox x:Name="IdTextBox" Margin="230,96,0,0" TextWrapping="Wrap" Height="32" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.587,1.408" VerticalAlignment="Top" HorizontalAlignment="Left" Width="126" Grid.RowSpan="2" />
        <TextBox x:Name="EndDateTextBox" Margin="230,171,0,0" TextWrapping="Wrap" Height="32" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.ColumnSpan="3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="253" Grid.Row="1"/>
        <TextBox x:Name="StartDateTextBox" Margin="231,122,317,209" TextWrapping="Wrap" Height="NaN" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.ColumnSpan="3" Grid.Row="1"/>
        <TextBox x:Name="FieldTextBox" Margin="231,75,0,0" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.ColumnSpan="3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="364" Grid.Row="1"/>
        <TextBox x:Name="TitleTextBox" Margin="0,23,204,0" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" HorizontalAlignment="Right" Width="365" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Button x:Name="SaveButton" Grid.Column="2" Content="Save" Margin="249,36,35,0" VerticalAlignment="Top" Click="SaveButton_Click" Grid.Row="1" Style="{StaticResource MainButton}"/>
        <Button x:Name="CloseButton" Grid.Column="2" Content="Close" Margin="247,98,35,0" VerticalAlignment="Top" Click="CloseButton_Click" Grid.Row="1" Style="{StaticResource MainButton}"/>
        <ComboBox x:Name="ResearcherComboBox" HorizontalAlignment="Left" Margin="230,224,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Style="{StaticResource MainComboBox}" Height="32" Grid.Row="1" Width="196" Grid.ColumnSpan="2"/>
        <TextBox x:Name="BudgetTextBox" Margin="231,279,9,52" TextWrapping="Wrap" Height="NaN" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.Row="1" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
