<Application x:Class="ResearchProjectManagement_SE193119.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ResearchProjectManagement_SE193119"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Foreground" Value='#FF6B705C' />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32" />
            <Setter Property="Background" Value="#FFFFF8EB" />
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="32" />
            <Setter Property="Background" Value="#FFFFF8EB" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value='10' />
            <Setter Property="Background" Value="#FFB38B82" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <Style x:Key="MainLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#FF6B705C" />
        </Style>

        <Style x:Key="MainTextBox" TargetType="TextBox" >
            <Setter Property="Height" Value="14" />
            <Setter Property="Background" Value="#FFFFF8EB" />
        </Style>

        <Style x:Key="MainComboBox" TargetType="ComboBox" >
            <Setter Property="Height" Value="14" />
            <Setter Property="Background" Value="#FFFFF8EB" />
        </Style>

        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="Padding" Value='5' />
            <Setter Property="Background" Value="#FFB38B82" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
    </Application.Resources>
</Application>
