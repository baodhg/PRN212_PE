<Window x:Class="PerfumeManagement_SE193119.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerfumeManagement_SE193119"
        mc:Ignorable="d"
        Title="CRUD Window" Height="500" Width="800" FontFamily="Tahoma" FontSize="13" Background="#FFDDE769" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Perfume ID" HorizontalAlignment="Left" Margin="81,43,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Margin="189,40,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <Label Content="PerfumeName" HorizontalAlignment="Left" Margin="82,89,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="189,92,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="276" Style="{StaticResource MainTextBox}"/>
        <Label Content="Ingredients " HorizontalAlignment="Left" Margin="80,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IngredientsTextBox" HorizontalAlignment="Left" Margin="189,131,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="330" Style="{StaticResource MainTextBox}"/>
        <Label Content="Release Date" HorizontalAlignment="Left" Margin="82,178,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ReleaseDateTextBox" HorizontalAlignment="Left" Margin="189,175,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <Label Content="Concentration" HorizontalAlignment="Left" Margin="80,221,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ConcentrationTextBox" HorizontalAlignment="Left" Margin="189,219,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="301" Style="{StaticResource MainTextBox}"/>
        <Label Content="Longevity" HorizontalAlignment="Left" Margin="82,270,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LongevityTextBox" HorizontalAlignment="Left" Margin="189,267,0,0" TextWrapping="Wrap"   Width="301" Style="{StaticResource MainTextBox}" VerticalAlignment="Top"/>
        <Label Content="Production Company" HorizontalAlignment="Left" Margin="81,312,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SaveButton" Content="Save" Margin="635,146,91,0" VerticalAlignment="Top" Click="SaveButton_Click" Style="{StaticResource MainButton}"/>
        <Button x:Name="CloseButton" Content="Close" Margin="635,255,91,0" VerticalAlignment="Top" Click="CloseButton_Click" Style="{StaticResource MainButton}" RenderTransformOrigin="0.495,-0.167"/>
        <ComboBox x:Name="CompanyComboBox" HorizontalAlignment="Left" Margin="189,314,0,0" VerticalAlignment="Top" Width="151" Height="18" Background="#FFF3CFCF"/>
    </Grid>
</Window>
