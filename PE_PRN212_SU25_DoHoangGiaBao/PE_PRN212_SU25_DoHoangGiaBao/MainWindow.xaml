<Window x:Class="PE_PRN212_SU25_DoHoangGiaBao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PE_PRN212_SU25_DoHoangGiaBao"
        mc:Ignorable="d"
        Title="JLPT Mock Test Management - SU 2025" Height="500" Width="800" FontFamily="Arial" FontSize="12" Background="#FFBAE6FD" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="383*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="213*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="351*"/>
        </Grid.RowDefinitions>
        <Label Content="JLPT Mock Test Management - SU 2025" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Style="{StaticResource MainLabel}" Width="275" Height="27" />
        <Rectangle Height="46" Margin="10,45,144,0" Stroke="Black" VerticalAlignment="Top" Fill="#FF1E3A8A" Grid.ColumnSpan="5"/>
        <TextBox x:Name="SearchText" Margin="16,50,36,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" TextChanged="SearchText_TextChanged" Grid.ColumnSpan="4"/>
        <Button x:Name="SearchButton" Content="Search" Margin="106,52,151,0" VerticalAlignment="Top" Click="SearchButton_Click" Style="{StaticResource MainButton}" Grid.Column="3" RenderTransformOrigin="0.846,1.813" Height="34" Grid.ColumnSpan="2" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <DataGrid x:Name="MockTestGrid" Margin="10,101,144,15" BorderBrush="Black" Grid.RowSpan="2" Grid.ColumnSpan="5" AutoGenerateColumns="False" SelectionChanged="MockTestGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TestId}" Width="30" />
                <DataGridTextColumn Header="Title" Binding="{Binding TestTitle}" Width="130" />
                <DataGridTextColumn Header="Skill Area" Binding="{Binding SkillArea}" Width="110" />
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="70" />
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" Width="70" />
                <DataGridTextColumn Header="Candidate ID" Binding="{Binding CandidateId}" Width="80" />
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="45" />
                <DataGridTextColumn Header="Full Name" Binding="{Binding Candidate.FullName}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="CreateButton" Grid.Column="4" Content="Create" Margin="95,58,28,0" VerticalAlignment="Top" Click="CreateButton_Click" Grid.Row="1"/>
        <Button x:Name="UpdateButton" Grid.Column="4" Content="Update" Margin="94,105,27,0" VerticalAlignment="Top" Click="UpdateButton_Click" Grid.Row="1"/>
        <Button x:Name="DeleteButton" Grid.Column="4" Content="Delete" Margin="94,152,27,0" VerticalAlignment="Top" Click="DeleteButton_Click" Grid.Row="1"/>
        <Button x:Name="Logout" Grid.Column="4" Content="Log out" Margin="95,286,27,0" Click="Logout_Click" Grid.Row="1" Background="Red" RenderTransformOrigin="0.863,0.556" Height="36" VerticalAlignment="Top" />
        <Button x:Name="ViewButton" Grid.Column="4" Content="View" Margin="96,10,27,0" Grid.Row="1" Click="ViewButton_Click" Height="36" VerticalAlignment="Top"/>



    </Grid>
</Window>
