<Window x:Class="ChargingSessionManagement_SE193119.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChargingSessionManagement_SE193119"
        mc:Ignorable="d"
        Title="Charging Session Management – Fall 2025" Height="500" Width="800" FontFamily="Tahoma" FontSize="12" Background="#FFA7F3D0" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="383*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="213*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="351*"/>
        </Grid.RowDefinitions>
        <Label Content="Charging Session Management – Fall 2025" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Style="{StaticResource MainLabel}" Width="343" Height="27" />
        <Rectangle Height="46" Margin="10,45,144,0" Stroke="Black" VerticalAlignment="Top" Fill="#FF1E3A8A" Grid.ColumnSpan="5"/>
        <TextBox x:Name="SearchText" Margin="16,50,36,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" Grid.ColumnSpan="4"/>
        <Button x:Name="SearchButton" Content="Search" Margin="106,52,151,0" VerticalAlignment="Top" Click="SearchButton_Click" Style="{StaticResource MainButton}" Grid.Column="3" RenderTransformOrigin="0.846,1.813" Height="34" Grid.ColumnSpan="2" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <DataGrid x:Name="SessionGrid" Margin="10,101,144,15" BorderBrush="Black" Grid.RowSpan="2" Grid.ColumnSpan="5" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding SessionId}"  />
                <DataGridTextColumn Header="Title" Binding="{Binding SessionTitle}"  />
                <DataGridTextColumn Header="Charging Station" Binding="{Binding ChargingStation}" />
                <DataGridTextColumn Header="Begin Time" Binding="{Binding BeginTime}"  />
                <DataGridTextColumn Header="Finish Time" Binding="{Binding FinishTime}"  />
                <DataGridTextColumn Header="Vehicle ID" Binding="{Binding VehicleId}"  />
                <DataGridTextColumn Header="Charging Fee" Binding="{Binding ChargingFee}" />
                <DataGridTextColumn Header="Model Name" Binding="{Binding Vehicle.ModelName}"  />
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="CreateButton" Grid.Column="4" Content="Create" Margin="95,58,28,0" VerticalAlignment="Top" Click="CreateButton_Click" Grid.Row="1"/>
        <Button x:Name="UpdateButton" Grid.Column="4" Content="Update" Margin="94,105,27,0" VerticalAlignment="Top" Click="UpdateButton_Click" Grid.Row="1"/>
        <Button x:Name="DeleteButton" Grid.Column="4" Content="Delete" Margin="94,152,27,0" VerticalAlignment="Top" Click="DeleteButton_Click" Grid.Row="1"/>
        <Button x:Name="Logout" Grid.Column="4" Content="Log out" Margin="95,286,27,0" Click="Logout_Click" Grid.Row="1" Background="Red" RenderTransformOrigin="0.863,0.556" Height="36" VerticalAlignment="Top" />
        <Button x:Name="ViewButton" Grid.Column="4" Content="View" Margin="96,10,27,0" Grid.Row="1" Click="ViewButton_Click" Height="36" VerticalAlignment="Top"/>


    </Grid>
</Window>
