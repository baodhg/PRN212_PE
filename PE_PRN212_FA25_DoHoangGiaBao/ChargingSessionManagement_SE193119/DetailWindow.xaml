<Window x:Class="ChargingSessionManagement_SE193119.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChargingSessionManagement_SE193119"
        mc:Ignorable="d"
        Title="Charging Session Management – Fall 2025" Height="500" Width="800" FontFamily="Tahoma" FontSize="12" Background="#FFA7F3D0" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="181*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>
        <Label Content="CREATE | UPDATE PAGE" x:Name="DetailPageLabel" Margin="0,16,162,51" FontWeight="Bold" Background="#FF1E3A8A" Foreground="White" FontSize="40" Grid.ColumnSpan="3" HorizontalAlignment="Right" Width="619" />
        <TextBox x:Name="SessionFeeBox" Margin="207,0,23,29" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.Row="1" VerticalAlignment="Bottom"/>
        <Label Content="ID" Margin="32,96,292,0" FontSize="20" Foreground="White" Grid.RowSpan="2" Style="{StaticResource MainLabel}" Height="30" VerticalAlignment="Top">
        </Label>
        <Label Content="Title" Margin="33,22,263,0" FontSize="20" Foreground="White" Grid.Row="1" Style="{StaticResource MainLabel}" Height="34" VerticalAlignment="Top">
        </Label>
        <Label Content="Charging Station" Margin="32,72,192,0" FontSize="20" Foreground="White" RenderTransformOrigin="0.501,0.775" Grid.Row="1" Style="{StaticResource MainLabel}" Height="34" VerticalAlignment="Top">
        </Label>
        <Label Content="Begin Time" Margin="31,119,235,0" FontSize="20" Foreground="White" Grid.Row="1" Style="{StaticResource MainLabel}" Height="33" VerticalAlignment="Top"/>

        <Label Content="Finish Time" Margin="32,170,233,0" FontSize="20" Foreground="White" Grid.Row="1" Style="{StaticResource MainLabel}" Height="31" VerticalAlignment="Top"/>

        <Label Content="Vehicle" Margin="33,224,244,0" FontSize="20" Foreground="White" Grid.Row="1" Style="{StaticResource MainLabel}" Height="31" VerticalAlignment="Top"/>

        <Label Content="Session Fee" Margin="31,298,236,0" FontSize="20" Foreground="White" Grid.Row="1" Style="{StaticResource MainLabel}" Height="31" VerticalAlignment="Top"/>

        <TextBox x:Name="IdTextBox" Margin="204,0,26,347" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.587,1.408" Grid.RowSpan="2" VerticalAlignment="Bottom" />
        <TextBox x:Name="FinishTextBox" Margin="204,0,0,154" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="244" Grid.Row="1"/>
        <TextBox x:Name="BeginTextBox" Margin="204,127,352,0" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.ColumnSpan="3" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="StationTextBox" Margin="204,0,0,248" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" Grid.ColumnSpan="3" HorizontalAlignment="Left" Width="391" Grid.Row="1" VerticalAlignment="Bottom"/>
        <TextBox x:Name="TitleTextBox" Margin="213,27,0,0" TextWrapping="Wrap" Height="31" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" RenderTransformOrigin="0.664,0.416" HorizontalAlignment="Left" Width="392" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <Button x:Name="SaveButton" Grid.Column="2" Content="Save" Margin="249,36,35,0" VerticalAlignment="Top" Click="SaveButton_Click" Grid.Row="1" />
        <Button x:Name="CloseButton" Grid.Column="2" Content="Close" Margin="247,98,35,0" VerticalAlignment="Top" Click="CloseButton_Click" Grid.Row="1"/>
        <ComboBox x:Name="VehicleComboBox" HorizontalAlignment="Left" Margin="207,232,0,0" VerticalContentAlignment="Center" Width="151" Grid.Row="1" Height="31" VerticalAlignment="Top"/>
    </Grid>
</Window>
