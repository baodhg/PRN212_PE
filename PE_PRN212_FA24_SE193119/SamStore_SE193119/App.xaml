<Application x:Class="SamStore_SE193119.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SamStore_SE193119"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Arial Narrow"/>
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Blue"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value='10' />
            <Setter Property="Background" Value="#FFB38B82" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <Style x:Key="MainLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style x:Key="MainTextBox" TargetType="TextBox" >
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="Height" Value="30" />
        </Style>

        <Style x:Key="MainComboBox" TargetType="ComboBox" >
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="Height" Value="30" />
        </Style>


        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="Padding" Value='5' />
            <Setter Property="Background" Value="#FFB38B82" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
    </Application.Resources>
</Application>
