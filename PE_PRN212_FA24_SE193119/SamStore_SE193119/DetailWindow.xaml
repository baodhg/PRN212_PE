<Window x:Class="SamStore_SE193119.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamStore_SE193119"
        mc:Ignorable="d"
        Title="Order Window" Height="600" Width="800" FontFamily="Arial" FontSize="13" Background="#EDD5D3" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label Content="PreOrder ID" HorizontalAlignment="Left" Margin="81,43,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Margin="184,40,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <Label Content="PreOrder No" HorizontalAlignment="Left" Margin="82,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NoTextBox" HorizontalAlignment="Left" Margin="184,86,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="276" Style="{StaticResource MainTextBox}"/>
        <Label Content="Deposit Amount" HorizontalAlignment="Left" Margin="80,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DepositTextBox" HorizontalAlignment="Left" Margin="184,131,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <Label Content="Total Amount" HorizontalAlignment="Left" Margin="82,178,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TotalTextBox" HorizontalAlignment="Left" Margin="184,175,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <Label Content="Customer Name" HorizontalAlignment="Left" Margin="82,221,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="184,219,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="301" Style="{StaticResource MainTextBox}"/>
        <Label Content="Customer Address" HorizontalAlignment="Left" Margin="82,270,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Margin="184,267,0,0" TextWrapping="Wrap"   Width="301" Style="{StaticResource MainTextBox}" VerticalAlignment="Top"/>
        <Label Content="Customer Phone" HorizontalAlignment="Left" Margin="82,318,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Margin="184,316,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="81,363,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="StatusTextBox" HorizontalAlignment="Left" Margin="184,361,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="120" Style="{StaticResource MainTextBox}"/>
        <Label Content="Created At" HorizontalAlignment="Left" Margin="82,409,0,0" VerticalAlignment="Top"/>

        <Label Content="Updated At" HorizontalAlignment="Left" Margin="82,459,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CreatedAtTextBox" HorizontalAlignment="Left" Margin="184,408,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <ComboBox x:Name="ProductComboBox" HorizontalAlignment="Left" Margin="184,512,0,0" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="UpdatedAtTextBox" HorizontalAlignment="Left" Margin="184,457,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="155" Style="{StaticResource MainTextBox}"/>
        <Label Content="Product ID" HorizontalAlignment="Left" Margin="83,510,0,0" VerticalAlignment="Top"/>

        <Button x:Name="SaveButton" Content="Save" Margin="635,178,91,0" VerticalAlignment="Top" Click="SaveButton_Click" Style="{StaticResource MainButton}"/>
        <Button x:Name="CloseButton" Content="Close" Margin="635,255,91,0" VerticalAlignment="Top" Click="CloseButton_Click" Style="{StaticResource MainButton}"/>

    </Grid>
</Window>
