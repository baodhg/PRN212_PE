<Window x:Class="SamStore_SE193119.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamStore_SE193119"
        mc:Ignorable="d"
        Title="PE07072024 Order Management Window" Height="600" Width="800" FontFamily="Arial" FontSize="13" Background="#EDD5D3" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="383*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="213*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="351*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchText" Margin="16,50,36,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" TextAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource MainTextBox}" Grid.ColumnSpan="4"/>
        <Button x:Name="SearchButton" Content="Search" Margin="106,52,151,0" VerticalAlignment="Top" Click="SearchButton_Click" Style="{StaticResource MainButton}" Grid.Column="3" RenderTransformOrigin="0.846,1.813" Height="34" Grid.ColumnSpan="2" />

        <DataGrid x:Name="DataGrid" Margin="10,101,144,15" BorderBrush="Black" Grid.RowSpan="2" Grid.ColumnSpan="5" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="PreOrder ID" Binding="{Binding PreOrderId}"/>
                <DataGridTextColumn Header="PreOrder No" Binding="{Binding PreOrderNo}" />
                <DataGridTextColumn Header="Deposit Amount" Binding="{Binding DepositAmount}"  />
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" />
                <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerName}"  />
                <DataGridTextColumn Header="Customer Address" Binding="{Binding CustomerAddress}"  />
                <DataGridTextColumn Header="Customer Phone" Binding="{Binding CustomerPhone}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"  />
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}"  />
                <DataGridTextColumn Header="Updated At" Binding="{Binding UpdatedAt}"  />
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}"  />
                <DataGridTextColumn Header="Product Name" Binding="{Binding Product.ProductName}"  />
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="CreateButton" Grid.Column="4" Content="Create" Margin="95,58,28,0" VerticalAlignment="Top" Click="CreateButton_Click" Grid.Row="1"/>
        <Button x:Name="UpdateButton" Grid.Column="4" Content="Update" Margin="94,105,27,0" VerticalAlignment="Top" Click="UpdateButton_Click" Grid.Row="1"/>
        <Button x:Name="DeleteButton" Grid.Column="4" Content="Delete" Margin="94,152,27,0" VerticalAlignment="Top" Click="DeleteButton_Click" Grid.Row="1"/>
        <Button x:Name="Logout" Grid.Column="4" Content="Log out" Margin="95,279,27,0" Click="Logout_Click" Grid.Row="1" Background="Red" RenderTransformOrigin="0.863,0.556" Height="43" VerticalAlignment="Top" />
        <Button x:Name="ViewButton" Grid.Column="4" Content="View" Margin="96,10,27,0" Grid.Row="1" Click="ViewButton_Click" Height="36" VerticalAlignment="Top"/>

    </Grid>
</Window>
